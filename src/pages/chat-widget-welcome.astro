---
import Layout from "../layouts/Layout.astro";
import Accordion from "../components/Accordion.jsx";
import Search from "../components/Search.jsx";
import UserList from "../components/UserListing.jsx";
import UserListActive from "../components/UserListingActive.jsx";
---

<Layout title="comm chat">
    <div class="wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-3 pe-lg-0 ">
                <div class="panel-left p-2 p-md-4 pb-5">
           
                    <div class="filter-box p-3  d-flex align-items-center">
                      <div class="select-box">
                        New <i class="count">1</i>
                      </div>
                      <div class="ms-auto me-4">
                        <ul class="switcher">
                          <li class="active"><a href="#"><img src="/assets/bag.svg"></a></li>
                          <li><a href="#"><img src="/assets/bag-in.svg"></a></li>
                        </ul>
                      </div>
          
                       <!--menu filter starts -->
                       <div class="dropdown more">
          
                        <div id="filter-button" class="filter-round" data-bs-toggle="dropdown" aria-expanded="false">
                          <div data-bs-toggle="tooltip" data-bs-placement="top" title="Filter" data-bs-original-title="Filter"
                            aria-label="Filter">
                          
                          </div>
                        </div>
          
                        <ul class="dropdown-menu dropdown-response-filter p-4 mt-2" id="dropdown-response-filter" aria-labelledby="dropdownMenuLink">
                          <div class="form-group">
                            <div class="d-flex flex-column gap-2">
                              <div class="sms-check mt-1">
                                <input type="checkbox" id="first-response">
                                <label class="dark-charcoal mb-3" for="first-response">First Response Due</label>
                              </div>
                              <div class="sms-check">
                                <input type="checkbox" id="response">
                                <label class="dark-charcoal mb-3" for="response">Response Due</label>
                              </div>
                              <div class="sms-check">
                                <input type="checkbox" id="no-response">
                                <label class="dark-charcoal mb-2" for="no-response">No Response Due</label>
                              </div>
          
                            </div>
                          </div>
          
          
                        </ul>
                      </div>
                      <!-- menu filter ends -->
                    </div>
                    <!--/.filter-box-->
                  <!-- custom search starts -->
                  <Search/>
                    <!--/.custom_search-->
                    <div class="inbox-wrapper mt-3">
                        <!-- chat listing -->
                    <UserList userimage="assets/chat-widget-sidebar.svg" title="Gsoftcomm" subtitle="Welcome to gsoftcomm..." time="2 Min ago" username="Chat widget" socialmedia="assets/chat-widget-sidebar.svg"/>
                    <UserListActive userimage="assets/chat-widget-sidebar.svg" title="Gsoftcomm" subtitle="Welcome to gsoftcomm..." time="1 Min ago" username="Chat widget2" socialmedia="assets/chat-widget-sidebar.svg"/>
                    <UserList userimage="assets/chat-widget-sidebar.svg" title="Gsoftcomm" subtitle="Welcome to gsoftcomm..." time="5 Min ago" username="Chat widget3" socialmedia="assets/chat-widget-sidebar.svg"/>
                      
                    </div>
                  </div><!--/-panel-left-->

             </div>
             <!--/.col-3-->

             <div class="col-lg-9 ps-lg-0 mt-4 pe-4" >
           
              <div class="gs-welcome card ">
                <div class="d-flex justify-content-center align-items-center mt-5 flex-column">
                  <div>
                    <h4 class="fw-500 text-black">Welcome user!</h4>
                  </div>
    
    
                  <div class="mt-3 primary-color fw-400">Letâ€™s click and see the conversations</div>
                  <div class="mt-5">
                    <img src="assets/welcome.svg" alt="">
                  </div>
                </div>
               </div>
          </div><!--/.col--9-->


                </div>
                </div>
                </div>
               
</Layout>
